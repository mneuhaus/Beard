{
    "alias": "box.phar",
    "chmod": "0755",
    "directories": ["src"],
    "files": [
        "vendor/herrera-io/phar-update/res/schema.json"
    ],
    "finder": [
        {
            "name": "*.php",
            "exclude": ["Tests"],
            "in": "vendor"
        },
        {
            "name": "*.pem",
            "exclude": ["Tests"],
            "in": "vendor"
        }
    ],
    "main": "bin/beard",
    "git-version": "git_tag",
    "output": "Repository/beard-current.phar",
    "replacements": {
        "manifest_url": "https://raw.github.com/mneuhaus/Beard/master/releases.json"
    },
    "stub": true
}